<%= render "shared/navbar" %>

<div data-spy="scroll" data-target="#navbar-example2" data-offset="0">
 
  <div class= "container-fluid">
      <div class="row" id="contenu_inscription">
              <div class="col-md-6 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
                  
                      <div id="accroche">
                          <h1 class="display-3"><kbd>Paul Emploi</kbd></h1>
                          <p class="lead"><kbd>Le site qui met en relation les étudiants et les particuliers</kbd></p>
                      </div>
                     <br>
                     
                           <% if @profil == "default" then %> 
                      
                               <form class="form-inline" action="/index" method="POST">
                                    <div class="form-group">
                                    <input type="email" class="form-control" id="InputEmail1" placeholder="example@email.com" name="inscription[email]">
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Me pré-inscrire !</button>
                               </form>
                           
                           <% else %>
                                 <% if @deja_inscrit=="true"%>
                                  <form class="form-inline" action="/index" method="POST">
                                        <div class="form-group">
                                        <input type="email" class="form-control" id="InputEmail1" placeholder="example@email.com" name="inscription[email]">
                                        </div>
                                        
                                        <button type="submit" class="btn btn-primary"  >Me pré-inscrire !</button>
                                   </form>
                                    <span id="message_mail_adresse_existe">  <%=@profil%> est déjà pré-inscrit.</span>

                                               
                               
                                 <% else %>
                                   
                                  
                                 <script type="text/javascript">
                                    $( document ).ready(function() {
                                        $('#ModalInscription').modal('toggle')
                                    });
                                  </script>
                               
                                   
                             <div class="modal fade" id="ModalInscription" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                  <div class="modal-content">
                                
                                  
                                    <div class="modal-body">
                                         <h5 class="modal-title" id="exampleModalLabel">Merci <%=@profil%> pour votre pré-inscription</h5>
                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                         <button type="submit" class="btn btn-primary"  >Je suis un étudiant</button>
                                         <button type="submit" class="btn btn-primary"  >Je cherche à embaucher un étudiant</button>
                                    </div>
                                  
                                   
                                    
                                  </div>
                                </div>
                            </div>
                                                         
                             
                            
                                   
                                   
                                   
                                   
                                   
                                   
                                   
                                   
                                 <% end %>
                         
                           <% end %>
                         
             
               </div>
       </div>
  
  
  
 
  
  <div id="one">
       <div class="row">
           <h1>Comment ca marche</h1>
               
         </div>
  
  </div>
  
  <h4 id="two">Je suis étudiant</h4>
  
  <h4 id="three">Je cherche un étudiant</h4>

</div>
  
  
</div>